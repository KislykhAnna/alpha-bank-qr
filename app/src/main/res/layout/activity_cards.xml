<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/add_card"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:tint="@android:color/black"
        app:srcCompat="@drawable/ic_add"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_card"
        app:layout_constraintBottom_toTopOf="@id/shadow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/my_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_cards"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_hide"
                app:layout_constraintStart_toEndOf="@id/my_cards"
                app:layout_constraintTop_toTopOf="@id/my_cards"
                app:layout_constraintBottom_toBottomOf="@id/my_cards"
                android:layout_marginLeft="15dp"
                android:tint="@android:color/black" />

            <LinearLayout
                android:id="@+id/my_cards_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/my_cards"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </LinearLayout>

            <TextView
                android:id="@+id/saved_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saved_cards"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/my_cards_list"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_hide"
                app:layout_constraintStart_toEndOf="@id/saved_cards"
                app:layout_constraintTop_toTopOf="@id/saved_cards"
                app:layout_constraintBottom_toBottomOf="@id/saved_cards"
                android:layout_marginLeft="15dp"
                android:tint="@android:color/black"
                android:layout_marginStart="15dp" />

            <LinearLayout
                android:id="@+id/saved_cards_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/saved_cards"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        android:layout_above="@id/bottom_bar"
        android:background="@drawable/menu_shadow"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="@android:color/white"
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>